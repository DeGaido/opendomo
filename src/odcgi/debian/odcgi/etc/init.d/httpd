#! /bin/sh
### BEGIN INIT INFO
# Provides:          httpd
# Required-Start:    $network
# Required-Stop:
# Should-Start:      glibc
# Default-Start:     2 3 4 5
# Default-Stop:      0 6
# Short-Description: Start busybox httpd server
# Description: Start busybox httpd server
#
### END INIT INFO
### Copyright(c) 2011 OpenDomo Services SL. Licensed under GPL v3 or later


. /lib/init/vars.sh
. /lib/lsb/init-functions

HTTPD_CONFIG="/etc/httpd.conf"
WEB_SERVICE="/var/www"
PID="/var/run/httpd.pid"
HTTPD_OPTS="httpd -c $HTTPD_CONFIG -h $WEB_SERVICE"

do_start () {
	start-stop-daemon --start --quiet --oknodo --pidfile $PID --exec /bin/busybox -- $HTTPD_OPTS
}

do_stop () {
	start-stop-daemon --stop --quiet --oknodo --signal TERM --exec /bin/busybox --pidfile $PID
	killall -9 busybox 2>/dev/null

}

do_status () {
	if text -f "$PID"; then
		echo "HTTPD busybox daemon is running"
	else
		echo "HTTPD busybox daemon isn't running"
	fi
}

case "$1" in
  start|"")
	log_daemon_msg "Starting HTTPD busybox server ..."
	do_start
	log_end_msg $?
        ;;
  restart|reload|force-reload)
	do_stop
	do_start
        exit 3
        ;;
  stop)
	log_daemon_msg "Stoping HTTPD busybox server ..."
        do_stop
	log_end_msg $?
        ;;
  status)
        do_status
        exit $?
        ;;
  *)
        echo "Usage: httpd [start|stop|restart|status]" >&2
        exit 3
        ;;
esac

:

